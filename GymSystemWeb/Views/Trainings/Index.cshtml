@model IEnumerable<GymSystem.Models.Training>

@{
    ViewData["Title"] = "Treninzi";
}

<h2>Treninzi</h2>

<p>
    <a asp-action="Create">Dodaj trening</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Free)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Free)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TrainingId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TrainingId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TrainingId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
